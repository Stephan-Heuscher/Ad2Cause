<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/search_causes_hint"
        android:layout_margin="8dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:inputType="text" />

    <!-- Causes RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/causesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_causes_found"
        android:gravity="center"
        android:visibility="gone"
        style="@style/TextStyle.BodyLarge" />

    <!-- Add New Cause FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCauseFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_cause_fab_content_desc"
        app:srcCompat="@android:drawable/ic_input_add"
        android:scaleType="center" />

</LinearLayout>
