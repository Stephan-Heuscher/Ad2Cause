<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_cause_title"
        style="@style/TextStyle.HeadlineMedium"
        android:layout_marginBottom="16dp" />

    <!-- Cause Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@color/surface_variant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/causeNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cause_name_hint"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Cause Category Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@color/surface_variant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/causeCategoryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cause_category_hint"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Cause Description Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@color/surface_variant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/causeDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/cause_description_hint"
            android:inputType="textMultiLine"
            android:gravity="top" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveCauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_cause" />

    </LinearLayout>

</LinearLayout>
