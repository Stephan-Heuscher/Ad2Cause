<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Home Screen Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Active Cause Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_tab_label"
                        style="@style/TextStyle.BodyMedium"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/activeCauseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_cause_selected"
                        style="@style/TextStyle.HeadlineMedium"
                        android:layout_marginTop="8dp" />

                    <!-- Empty state guidance -->
                    <LinearLayout
                        android:id="@+id/noCauseGuidance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_cause_prompt"
                            style="@style/TextStyle.BodyMedium"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/browseCausesButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/browse_causes"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Earnings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/primary_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/your_points"
                        style="@style/TextStyle.BodyMedium" />

                    <TextView
                        android:id="@+id/totalEarningsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 points"
                        style="@style/TextStyle.HeadlineLarge"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Ad Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Loading Indicator -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/adLoadingIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    app:indicatorColor="@color/primary" />

                <TextView
                    android:id="@+id/loadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ad_loading"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"
                    style="@style/TextStyle.BodyMedium"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/watchVideoAdButton"
                    android:layout_width="280dp"
                    android:layout_height="52dp"
                    android:text="@string/watch_video_ad"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/engageInteractiveAdButton"
                    android:layout_width="280dp"
                    android:layout_height="52dp"
                    android:text="@string/engage_interactive_ad"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
