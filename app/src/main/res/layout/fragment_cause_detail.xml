<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Top App Bar with Back Button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/detailToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface"
        app:title="Cause Details"
        app:navigationIcon="@drawable/ic_back" />

    <!-- Cause Details ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cause Image -->
            <ImageView
                android:id="@+id/causeDetailImage"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                android:background="@color/surface_variant" />

            <!-- Cause Name -->
            <TextView
                android:id="@+id/causeDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cause Name"
                style="@style/TextStyle.HeadlineLarge"
                android:layout_marginTop="16dp" />

            <!-- Earnings Display -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/causeDetailEarnings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_earned"
                        style="@style/TextStyle.BodyLarge" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                style="@style/TextStyle.HeadlineMedium"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/causeDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cause description goes here..."
                style="@style/TextStyle.BodyLarge"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_secondary" />

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setActiveCauseButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/set_as_active_cause"
                app:cornerRadius="12dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
