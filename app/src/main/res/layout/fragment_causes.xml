<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/outline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="@color/outline"
                android:contentDescription="Search icon" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:hint="Search causes..."
                android:textColorHint="@color/outline"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/clearSearchButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@color/outline"
                android:visibility="gone"
                android:contentDescription="Clear search"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Category Chips (Play style) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/categoryChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:selectionRequired="false"
        app:chipSpacingHorizontal="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            app:chipBackgroundColor="@color/surface_variant" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTechnology"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technology" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHealth"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEnvironment"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Environment" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Causes RecyclerView (Grid) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/causesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_causes_found"
        android:gravity="center"
        android:visibility="gone"
        style="@style/TextStyle.BodyLarge" />

    <!-- Add New Cause FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCauseFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_cause_fab_content_desc"
        app:srcCompat="@android:drawable/ic_input_add"
        android:scaleType="center" />

</LinearLayout>
