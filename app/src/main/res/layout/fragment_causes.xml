<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Category Chips (Play style) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/categoryChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:selectionRequired="false"
        app:chipSpacingHorizontal="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="All"
            app:chipBackgroundColor="@color/surface_variant" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTechnology"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Technology" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHealth"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Health" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEnvironment"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Environment" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Causes RecyclerView (Grid) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/causesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_causes_found"
        android:gravity="center"
        android:visibility="gone"
        style="@style/TextStyle.BodyLarge" />

    <!-- Add New Cause FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCauseFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_cause_fab_content_desc"
        app:srcCompat="@android:drawable/ic_input_add"
        android:scaleType="center" />

</LinearLayout>
